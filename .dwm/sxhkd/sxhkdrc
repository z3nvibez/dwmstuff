super + Escape
    pkill -USR1 -x sxhkd

super + Return
   termite

super + shift + Return
    thunar

#Rofi & dmenu

super + shift + d 
   dmenu run

super + d
    rofi -show run -font "Noto Sans 13"

super + b
  buku-dmenu

super + c
  clipmenu

super + e
    rofi -show emoji -modi emoji


alt + p
    rofi -show

alt + c
    rofi -show calc -modi calc -no-show-match -no-short > /dev/null

alt + b
 ~/Documents/scripts/bukuadd

# Application Keybindings

super + w
    firefox

super + s
   simplescreenrecorder

super + o 
   obs & audacity

ctrl + alt + k
  termite -e bpytop

alt + s
    todoist

alt + z
    zim

alt + g
    evolution

alt + n 
    discord

alt + t 
    telegram-desktop

ctrl + alt + s
    xfce4-screenshooter

alt + shift + l
  lotion

ctrl + alt + n
    termite 'ncmpcpp' -e ncmpcpp

#Picom Toggle
ctrl + alt + o
    ~/.config/bspwm/scripts/picom-toggle.sh


#Audio Keybindings

XF86AudioRaiseVolume
        amixer -c 1 -- sset Master 2db+

XF86AudioLowerVolume
        amixer -c 1 -- sset Master 2db-

XF86AudioMute
        amixer -c 1 -- sset Master toggle

alt + d
        amixer -c 1 -- sset Master 2db+

alt + a
        amixer -c 1 -- sset Master 2db-

XF86AudioPlay
    playerctl play-pause

ctrl + alt + p
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

ctrl + shift + period
    playerctl next

ctrl + shift + comma
    playerctl previous

XF86AudioStop
    playerctl stop

alt + {h,j,k,l}
   mpc {prev,next,play,pause}

alt + m
  termite 'neomutt' -e neomutt

